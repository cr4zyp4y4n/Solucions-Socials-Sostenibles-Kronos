{
  "name": "sss-kronos",
  "productName": "SSS Kronos",
  "version": "2.1.12",
  "description": "Aplicación de escritorio para la gestión avanzada de proveedores y análisis de facturas en Solucions Socials. Automatiza la importación de Excel, integra roles y permisos, y ofrece dashboards y auditoría en tiempo real para equipos de administración y gestión.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "electron-forge make",
    "build-nsis": "electron-forge make && electron-builder --config.asar=false --config.directories.app=out/SSS\\ Kronos-win32-x64",
    "dist": "electron-forge make && electron-builder --config.asar=false --config.directories.app=out/SSS\\ Kronos-win32-x64",
    "webpack": "electron-forge make",
    "release": "electron-forge make && electron-forge publish"
  },
  "keywords": [
    "electron",
    "react",
    "supabase",
    "gestión-proveedores",
    "análisis-facturas",
    "excel",
    "dashboard",
    "erp",
    "crm",
    "solucions-socials",
    "español"
  ],
  "author": {
    "name": "Brian Bautista",
    "email": "brianbauma10@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.11.0",
    "electron": "37.2.0",
    "electron-builder": "^26.0.12",
    "node-loader": "^2.1.0",
    "style-loader": "^3.3.4"
  },
  "dependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@supabase/supabase-js": "^2.39.0",
    "babel-loader": "^10.0.0",
    "chart.js": "^4.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "feather-icons-react": "^0.9.0",
    "file-loader": "^6.2.0",
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.525.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "xlsx": "^0.18.5"
  },
  "makers": [
    {
      "name": "@electron-forge/maker-squirrel",
      "config": {
        "iconUrl": "./src/assets/LogoMinimalistSSSHighestOpacity.ico",
        "setupIcon": "./src/assets/LogoMinimalistSSSHighestOpacity.ico"
      }
    },
    {
      "name": "@electron-forge/maker-zip",
      "platforms": [
        "darwin"
      ]
    },
    {
      "name": "@electron-forge/maker-deb",
      "config": {}
    },
    {
      "name": "@electron-forge/maker-rpm",
      "config": {}
    }
  ],
  "build": {
    "appId": "com.solucionssocials.sss-kronos",
    "productName": "SSS Kronos",
    "directories": {
      "output": "dist",
      "app": "out/SSS Kronos-win32-x64"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "cr4zyp4y4n",
      "repo": "Solucions-Socials-Sostenibles-Kronos"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/LogoMinimalistSSSHighestOpacity.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
